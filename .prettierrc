{
    "singleQuote": false,
    "printWidth": 120,
    "endOfLine": "auto",
    "semi": true,
    "tabWidth": 4,
    "bracketSpacing": true,
    "trailingComma": "es5",
    "plugins": [
        "prettier-plugin-solidity"
    ],
    "overrides": [
        {
            "files": "*.sol",
            "options": {
                "printWidth": 80,
                "tabWidth": 4,
                "useTabs": false,
                "singleQuote": false,
                "bracketSpacing": false
            }
        }
    ]
}